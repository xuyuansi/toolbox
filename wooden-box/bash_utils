
# print the full path with file name
find `pwd` -name <filename> #new

# create symbolic link to a file
ln -s /path/to/file /path/to/symlink

# pipe to pasteboard
pbcopy pbpaste

# monitor the change of command result
watch -d=cumulative -n 1 <command e.g. ls>
watch -d=cumulative -n 1 "echo 'ls /com/xoom/service' | zkCli"

# see the content of a jar 
jar -tvf <jarname>
# unjar a jar 
jar -xvf <jarname>

# see the content of a file inside a jar
unzip -q -c <jarname> <filepath> 
or
unzip -p    <jarname> <filepath>

# print java homes for all versions
/usr/libexec/java_home -V
